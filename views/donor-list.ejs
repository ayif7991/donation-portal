                      <td><%=data.email %></td>
                      <td><%=data.location %></td>
                      <td><%=data.contact %></td>
                      <td>
                        <%
                        selectedactive = selectedsuspended = '';
                        if('active' == data.status) {
                          selectedactive = 'selected';
                        }
                        else{
                          selectedsuspended = 'selected';
                        }
                        %>
                        <select id="<%=data._id%>" class="isActive">
                          <option <%=selectedactive%> value="active">Active</option>
                          <option  <%=selectedsuspended%> value="suspended">Suspended</option>
                        </select>
                    </td>
                      </td>
                      <td><a href="/delete/<%=data.id%>">Delete</a></td>
                    </tr>
                    <% i++; }) %> <% } else{ %>
                    <tr>
                      <td colspan="7">No Data Found</td>
                    </tr>
                    <% } %>
                </table>
                <!-- End Table with stripped rows -->
